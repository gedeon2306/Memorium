<%-include("./composants/header") %>
 <style>
    .section {
    display: flex;
    gap: 20px;
    justify-content: center;
    align-items: center;
    padding: 50px;
    flex-wrap: wrap;
}

.card {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 10px;
    width: 50px;
    height: 50px;
    padding-top: 13px;
    text-align: center;
    padding: auto;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease;
}

.card:hover{
    background-color: rgb(75, 75, 224);
}
 </style>
 <section class="section">
    <% const N = 250; const array = [{'t': 2},{'t': 59}, {'t': 6}, {'t': 249}, {'t': 199}, {'t': 13}]; %>
    <% for (let i = 1; i <= N; i++) { %>
        <% let isRed = false; %>
        <% array.forEach(element => { %>
            <% if (element.t === i) { %>
                <% isRed = true; %>
            <% } %>
        <% }); %>

        <% if (isRed) { %>
            <div class="card" style="background-color: #ff0000;"><%= i %></div>
        <% } else { %>
            <div class="card"><%= i %></div>
        <% } %>
    <% } %>
<% for( let index = 0; index < array.length; index++ ) { %>

<% } %>
 </section>       
