<%-include("./composants/header") %>

        <%-include('./composants/toast') %>

        <section class="cards-section">
            <div class="input-container">
                <i class="fa fa-search icon"></i>
                <input class="input-field" type="text" id="myInput" onkeyup="myFunctionCard()" placeholder="Effectuez une recherche...">
            </div>
            <% if (defunts.length === 0) { %>
                <p>O enregistrement</p>
            <% } else { %>
                <% defunts.forEach(defunt => { %>
                    <div class="card">
                        <img src="<%=defunt.photo === null ? 'assets/images/logo/memoriumLogo.png' : 'assets/images/imagesDefunts/'+defunt.photo %>" alt="Photo de profil" class="card-image-liste">
                        <h2 class="card-name"><%=defunt.nom %></h2>
                        <h3 class="card-surname"><%=defunt.prenom %></h3>
                        <% if (defunt.statut === 'Incineration Prevue') { %>
                            <h4 class="card-statut"><%=defunt.statut %></h4>
                        <% } else if (defunt.statut === 'InhumÃ©') { %>   
                            <h4 class="card-statut" style="color: green;"><%=defunt.statut %></h4>
                        <% } else { %>
                            <h4 class="card-statut" style="color: red;"><%=defunt.statut %></h4>
                        <% } %>
                        <div class="card-buttons">
                            <a href="/defunt.show/<%=defunt.id %>" class="btn btn-bleu"><i class="fa fa-eye fa-fw"></i></a>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </section>
<%-include("./composants/footer") %>