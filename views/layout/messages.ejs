<%-include("./composants/header") %>

    <section style="padding: 20px;">
        <div class="w3-container">
            <h2><i class="fa fa-comment fa-fw"></i> Messages</h2>
            <hr>
            
            <div class="input-container">
                <i class="fa fa-search icon"></i>
                <input class="input-field" type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">
            </div>
            <% messages.forEach(message => { %>
                <div class="w3-row">
                    <div class="w3-col m2 text-center">
                        <img class="w3-circle" src="<%= message.photo === null ? 'assets/images/user.png' : 'assets/images/imagesUsers/'+message.photo %>" style="width:96px;height:96px">
                    </div>
                    <div class="w3-col m10 w3-container">
                        <% if (message.role === 'Administrateur') { %>
                            <h4><strong style="color: red;">Administrateur (<%=message.nomComplet %>)</strong> <span class="w3-opacity w3-medium"><%= moment(message.dateTime).locale('fr').format('D MMM YYYY HH:mm') %></span></h4>
                        <% }else{ %>
                            <h4><strong><%=message.nomComplet %></strong> <span class="w3-opacity w3-medium"><%= moment(message.dateTime).locale('fr').format('D MMM YYYY HH:mm') %></span></h4>
                        <% } %>
                             
                        <p><%=message.message %></p><br>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
        
<%-include("./composants/footer") %>